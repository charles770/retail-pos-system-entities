<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Pedido.
    -->
    <changeSet id="20190909134813-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="cliente_id"
                                 baseTableName="pedido"
                                 constraintName="fk_pedido_cliente_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cliente"/>

        <addForeignKeyConstraint baseColumnNames="empleado_id"
                                 baseTableName="pedido"
                                 constraintName="fk_pedido_empleado_id"
                                 referencedColumnNames="id"
                                 referencedTableName="empleado"/>

        <addForeignKeyConstraint baseColumnNames="pedido_id"
                                 baseTableName="pedido_producto"
                                 constraintName="fk_pedido_producto_pedido_id"
                                 referencedColumnNames="id"
                                 referencedTableName="pedido"/>

        <addForeignKeyConstraint baseColumnNames="producto_id"
                                 baseTableName="pedido_producto"
                                 constraintName="fk_pedido_producto_producto_id"
                                 referencedColumnNames="id"
                                 referencedTableName="producto"/>
        
    </changeSet>
</databaseChangeLog>
